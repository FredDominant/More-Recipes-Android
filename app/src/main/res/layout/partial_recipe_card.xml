<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/recipe_card"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="332dp"
                android:layout_height="258dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/recipe_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/berkshire_swash"
                android:text="@string/default_recipe_name"
                android:textSize="?android:textAppearanceLarge"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/recipe_image"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/recipe_image"
                app:layout_constraintTop_toBottomOf="@+id/recipe_image" />

            <TextView
                android:id="@+id/recipe_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="24dp"
                android:text="@string/default_recipe_owner_name"
                app:layout_constraintEnd_toEndOf="@+id/recipe_name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/recipe_name"
                app:layout_constraintTop_toTopOf="@+id/recipe_name" />

            <ImageView
                android:id="@+id/recipe_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/recipe_owner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/recipe_name"
                app:layout_constraintTop_toTopOf="@+id/recipe_name"
                app:srcCompat="@drawable/ic_favorite_black_24dp" />

            <ImageView
                android:id="@+id/recipe_unlikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.084"
                app:layout_constraintStart_toEndOf="@+id/recipe_favourites"
                app:layout_constraintTop_toTopOf="@+id/recipe_name"
                app:srcCompat="@drawable/ic_thumb_up_black_24dp" />

            <ImageView
                android:id="@+id/recipe_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/recipe_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/recipe_unlikes"
                app:layout_constraintTop_toTopOf="@+id/recipe_name"
                app:srcCompat="@drawable/ic_thumb_down_black_24dp" />

            <TextView
                android:id="@+id/recipe_favourite_count"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                android:padding="3dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/recipe_favourites"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/recipe_favourites"
                app:layout_constraintTop_toBottomOf="@+id/recipe_favourites"
                tools:text="60" />

            <TextView
                android:id="@+id/recipe_like_count"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                android:padding="3dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/recipe_likes"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/recipe_likes"
                app:layout_constraintTop_toBottomOf="@+id/recipe_likes"
                tools:text="60" />

            <TextView
                android:id="@+id/recipe_unlike_count"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                android:padding="3dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="@+id/recipe_unlikes"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/recipe_unlikes"
                app:layout_constraintTop_toBottomOf="@+id/recipe_unlikes"
                tools:text="60" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>